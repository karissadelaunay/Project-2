<%- include('../partials/header') %>

<section id="show-page">
    <div>Category:</div>
    <div><%= category.category %></div>
    <div>Workouts:</div>
    <% category.workouts.forEach(workout => { %> 
        <div><%= workout.workoutName %> 
        <div><%= workout.sets %></div>
        <div><%= workout.reps %></div>
    </div>
    <% }) %> 

    <div>Workouts:</div>
    <% if (workouts.length >0) { %>
        <%workouts.forEach(function (w){%>
            <div>Workout:<%=w.workoutName%></div>
            <div>Sets:<%=w.sets%></div>
            <div>Reps:$<%=w.reps%></div>
        <%})%>
  <% } else { %>
  <div>No workouts yet</div>
  <%}%>
</section>

<a href="/workouts/new/<%= category._id %>">New Workout</a>

<%- include('../partials/footer') %>